        <!-- Menu item -->
        <menuitem id="menu_custom_model" name="Custom Model" parent="base.menu_sales" sequence="20"/>
        <menuitem id="menu_custom_model_root" name="Custom Model" parent="menu_custom_model" sequence="1"/>

        <menuitem id="menu_custom_model_list" name="Custom Models" parent="menu_custom_model_root" sequence="1" action="action_custom_model"/>
    </data>
</odoo>
